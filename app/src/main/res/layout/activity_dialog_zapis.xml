<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogZapisActivity">

    <TextView
        android:id="@+id/podajNazweKodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podaj nazwÄ™ kodu"
        android:textSize="20sp"
        android:layout_marginTop="236dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nazwaKodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podajNazweKodu"
        app:layout_constraintVertical_bias="0.09"
        android:textSize="16sp"
        android:hint="Nazwa"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/zapiszKodDialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz kod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazwaKodu"
        android:background="@drawable/button"/>


</androidx.constraintlayout.widget.ConstraintLayout>